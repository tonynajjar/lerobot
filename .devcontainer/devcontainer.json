{
    "name": "LeRobot GPU DevContainer",
    "build": {
        "dockerfile": "../docker/Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--name=lerobot"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "remoteUser": "root"
}
